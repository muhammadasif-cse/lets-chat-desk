{
  "appId": "com.n-ziermann.lets-chat",
  "files": ["dist-electron", "dist-react"],
  "extraResources": ["dist-electron/preload.cjs", "src/assets/**"],
  "icon": "/lets-chat.png",
  "mac": {
    "target": "dmg"
  },
  "linux": {
    "target": "AppImage",
    "category": "Utility"
  },
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "sign": false,
    "verifyUpdateCodeSignature": false
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
